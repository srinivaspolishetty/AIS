.login{
	&-main{
		margin: auto;
		background-color: white !important;
		overflow:hidden !important;
	}
	&-banner{
		background-size: contain;
		width:100%;
		height:100%;
		background-image:url(assets/images/bg_login.png);
		background-repeat:no-repeat; 
	}
	&-logo{
		float: right;
		position: absolute;
		right: 10%;
		top: 2%;
		// & img{
		// 	float:right;
		// 	padding-left:50%;
		// }
	}
	&-leftline{
		height:20px;
		width:3px;
		background-color:$abhaya-primary-color;
	}
	&-content{
		h3{
			padding-left:10px;
			font-weight: bold;
			font-size:18px;
			color:$abhaya-primary-color;
		}
	}
	&-form{
		margin-top:30PX;
		background-position: 10px 12px;
		background-repeat: no-repeat;
		width: 100%;
		font-size: 16px;
		padding-bottom:12PX;
		border: none;
		margin-bottom: 12px;
		border-bottom: 1px solid #f8f8f8;
		outline: none;
		& option{
			font-weight: normal;
			display: block;
			white-space: pre;
			min-height: 3.2em;
			padding-top: 0px;
			padding-right: 0px;
			padding-bottom: 1px;
			padding-left: 2px;
			box-sizing: border-box;
		}
	}
	&-block{
		top: 62%;
		left: 7%;
		position: relative;
	}
	&-height{
		min-height:700px;
	}
}