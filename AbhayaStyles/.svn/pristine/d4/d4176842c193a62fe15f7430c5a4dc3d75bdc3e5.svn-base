.header{
	height:60px;
	width:100%;
	padding-right:20px;
	background-color: $abhaya-primary-color;
	&-search{
			button{
				background-color: transparent;
				border: none;
				color: #99F1FF;
			}
			input[type=text]{
				background-color: transparent;
				border:none;
				width: 70%;
				color:$white;
				outline: none;
				&::placeholder {
					color: #99F1FF;
				  }
				  &:-ms-input-placeholder { /* Internet Explorer 10-11 */
					color: #99F1FF;
				   }
				   &::-ms-input-placeholder { /* Microsoft Edge */
					color: #99F1FF;
				   }
			}

	}
	&-profile{
		margin-top:10px;
		float: right;
		cursor: pointer;
		& i.icon-ic_profile{
			float:left;
			width:40px;
			height: 40px;
			padding: 5px;
			padding-left: 12px;
			background-color: #22BAD3;
			border-radius: 50%;
			color:$white;
		}
		& h5{
			padding-top:5px;
			padding-left:10px;
			padding-right:5px;
			color:$white;
			float:left;
			font-size:14px;
			& span{
				font-size:10px;
			}
		}
		& .arrow{
			&-down{
					float:left;
					color:$white;
					width:25px;
					text-align: center;
					margin-top:8px;
					border-radius: 2px;
					background-color: #22BAD3;
					padding:5px;
			}
		}
	}
	
}