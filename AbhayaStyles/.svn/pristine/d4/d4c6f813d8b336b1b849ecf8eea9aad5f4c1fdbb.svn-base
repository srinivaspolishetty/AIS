.dropdown{
	&-menu{
		margin-right:16px;
		top:9px !important;
		margin-top:0px!important;
		background-color:$white;
		width:180px;
		color:$abhaya-primary-color;
		-webkit-box-shadow: 0px 0px 7px 0px rgba(92,92,92,0.4);
		-moz-box-shadow: 0px 0px 7px 0px rgba(92,92,92,0.4);
		box-shadow: 0px 0px 7px 0px rgba(92,92,92,0.4);
		border-radius:5px;
		& li a{
			display: block;
			padding:12px 16px 12px 16px;
			&:hover{
				background-color: $abhaya-primary-color;
				color:$white !important;
    			text-decoration: none;
			}
		}
	}
	&-submenu{
		position: relative;
		   margin-top:0px;
		   &>.dropdown-menu{
			top: 0;
			left: 100%;
			margin-top: -6px;
			margin-left: 0px;
			-webkit-border-radius: 0 6px 6px 6px;
			-moz-border-radius: 0 6px 6px;
			border-radius: 0 6px 6px 6px;
			background-color:$white;
			position: absolute;
		   }
		   &>a:after{
			display: block;
			content: " ";
			float: right;
			width: 0;
			height: 0;
			border-color: transparent;
			border-style: solid;
			border-width: 5px 0 5px 5px;
			margin-top: 5px;
			margin-right: -5px;
		   }
	}
	&-item{
		background-color:$white;
		color:$abhaya-primary-color;
		&.active{
			color: $abhaya-primary-color;
			background-color: $white;
		}
	}
	&-toggle::after{
		display:none!important;
	}
}
.footer{
	border:0;
	&-details{
		width:269px !important;
		font-size:14px;
		text-align: center;
		position:fixed;
		bottom:0;
		background:$white;
		border-top:1px solid #f8f8f8;

	}
	&-small{
		width:6.5% !important;
		font-size:12px;
		text-align: center;
		position:fixed;
		bottom:0;
		background:$white;
		border-top:1px solid #f8f8f8;
	}
}
