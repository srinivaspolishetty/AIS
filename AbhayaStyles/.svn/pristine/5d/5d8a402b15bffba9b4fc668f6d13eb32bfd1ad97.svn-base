.form{
	&-group{
		& .form-control{
			&:focus{
				box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
				-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
				-moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
				transition: none;
				-moz-transition: none;
				-webkit-transition: none;
			}
		}
		& label{
			color:$grey;
			font-size: 16px;
			&.required{
				&:after{
					content: "*";
					color:$red-dark;
					padding-left:3px;
				}
			}
		}
		& input{
			&[type=number]{
				&::-webkit-inner-spin-button, &::-webkit-outer-spin-button{
					-webkit-appearance: none; 
					margin: 0;
				}
			}
		}
		& select{
			border:1px solid $grey-form;
			color:$grey-form;
			font-size:14px;
			& option{
				font-weight: normal !important;
				display: block !important;
				white-space: pre !important;
				min-height: 5em !important;
				padding: 0px 2px 1px !important;
			}
		}
		
		& ::placeholder{
			color:$grey-form;
			font-size:14px;
		}
	}
}
.grid{
	&-table{
		border-collapse: collapse;
		width: 100%;
		margin: 0 0 1em;
		background-color:#fff;
		thead{
			tr{
			th{
			border-bottom:2px solid $abhaya-primary-color;
			padding-bottom:10px;
			color:$abhaya-primary-color;
			font-size: 14px;
			border-top:none !important;
			text-align: center;
			}
			}
		}
		tbody{
			tr{
				border-bottom: 1px solid #FCFCFC;
				td{
					text-align: center;
					padding: .9em 0;
					color:#5B5B5B;
					font-size: 14px;
					&:last-child{
						text-align: center;
						cursor: pointer;
						width:20px;
					}
				}
			}
		}
		& th,td{
			padding-left:6px !important;
			padding-right:6px !important;
		}
		& th:first-child, & th:last-child{
			padding-left:0px !important;
			padding-right:0px !important;
		}
		& td:first-child, & td:last-child{
			padding-left:0px !important;
			padding-right:0px !important;
		}
	}
&-table.popup{
	& .form-control {
		// margin-left: 18%;
		display: block;
		// width: 66%;
		height: calc(2.25rem + 2px);
		padding: .375rem .75rem;
		font-size: 1rem;
		font-weight: 400;
		line-height: 1.5;
		color: #495057;
		background-color: #fff;
		background-clip: padding-box;
		border: 1px solid #ced4da;
		border-radius: .25rem;
	}

	// & th:first-child{
	// 	text-align: left !important;
	// 	width:6% !important;
	// }
	// & td:first-child{
	// 	text-align: left !important;
	// 	width:6% !important;
	// }
}
	&-nodata{
		& h6{
			padding-left: 42%;
			padding-top: 1%;
			position: absolute;
		}
	}
}
.btn{
   		border:1px solid $white;
        color:$white;
        padding: 0.5rem .8rem;
        font-size:14px;
        background-color:$abhaya-primary-color;
        &:hover{
            background-color:$white;
            color:$abhaya-primary-color;
        }&.active{
            background-color:$white;
            color:$abhaya-primary-color;
        }
    &-left{
        border-top-left-radius: 50px !important;
        border-bottom-left-radius: 50px !important;
    }
    &-right{
        margin-left:-5px;
        border-top-right-radius: 50px !important;
        border-bottom-right-radius: 50px !important;
	}	
	&-round{
		border-radius:50px !important;
		border:1px solid $white;
		background-color: transparent;
        color:$white;
		padding: 0.4rem .8rem;
		font-size:14px;
		cursor: pointer;
		outline: none !important;
		&:hover{
            background-color:$white;
			color:$abhaya-primary-color;
		}
	}
	&-search{
		outline:none !important;
		font-size:24px;
		border:none;
		background-color: transparent;
		padding: 0.5rem .8rem;
		cursor: pointer;
		color:$white;
	}
	&-cal{
		background-color: transparent;
		border: none;
		color: $white;
		font-size: 16px;
		// border:1px solid #99F1FF !important;
		outline: none !important;
		cursor: pointer;
		padding-top:3px;
		position: relative;
		padding: 0.4rem .4rem;
		float: right;
		margin-left: -30px;
		// border-radius: .25rem;
	}
	&-refresh{
		background-color: transparent;
		border: none;
		color: $white;
		font-size:22px;
		outline: none !important;
		cursor: pointer;
		padding-top:7px;
		margin-left:-7px;
	}
	&-menu{
		background-color: transparent;
		border: none;
		color: $white;
		font-size: 30px;
		outline: none !important;
		cursor: pointer;
		padding-top:7px;
		margin-left:-7px;
		position: absolute;
		left:304px;
		z-index:999;
		-webkit-transition: all 0.5s ease;                  
		-moz-transition: all 0.5s ease;                 
		-o-transition: all 0.5s ease;   
		-ms-transition: all 0.5s ease;          
		transition: all 0.5s ease;
		&.collapsed{
			left:100px!important;
		}
	}
	&-primary{
		padding:8px;
		padding-left:22px;
		padding-right:22px;
		background-color: $abhaya-primary-color;
		color:#ffffff;
		font-weight: 300;
		font-size:16px;
		border: none;
		border-radius: 6px;
		outline: none;
		&:hover {
			color: #fff !important;
			background-color: #1c9cce;
			border-color: #1c9cce;
		}
	}
	&-secondary{
		padding:10px;
		padding-left:20px;
		padding-right:20px;
		background-color: $grey-light;
		color:#ffffff;
		font-weight: 300;
		font-size:16px;
		border: none;
		border-radius: 6px;
		outline: none;
	}
}

.page{
	&-header{
		height:60px;
	}
	&-leftdiv{
		width:calc(100% - 60px);
		float:left;
	}
	&-rightdiv{
		width:60px;
		float:right;
	}
	&-filters{
		height:0px;
		padding:0px;
		-webkit-transition: all 0.3s ease;                  
		-moz-transition: all 0.3s ease;                 
		-o-transition: all 0.3s ease;   
		-ms-transition: all 0.3s ease;          
		transition: all 0.3s ease;
		&.show{
			height:auto;
			// max-height: 50px;
		}
		& input[type=text]{
			background-color: transparent;
			border: 1px solid #99F1FF;
			color:$white;
			&::placeholder{
				color:#99F1FF;
			}
		}
		& select{
			border:1px solid #99F1FF !important;
			color:$white !important;
			font-size:14px;
			background-color: transparent !important;
			& option{
				color:$grey-light !important;
				font-weight: normal !important;
				display: block !important;
				white-space: pre !important;
				min-height: 5em !important;
				padding: 0px 2px 1px !important;
			}
			&::placeholder{
				color:#99F1FF !important;
			}
		}
		
		& .btn{
			&-close{
				color:$white;
				margin-top:-30px;
				margin-right:10px;
			}
		}
	}
}
.has{
	&-error{
		& .form{
			&-control{
				border:1px solid $red-dark;
			}
		}& label{
			color:$red-dark;
		}
		& span.help-block{
			color:$red-dark;
		}
	}
}
.datepicker{
	& .dropdown{
		&-menu{
			width:235px!important;
			top:35px!important;
		}
	}
}
input{
	&[type=number]{
		&::-webkit-inner-spin-button, &::-webkit-outer-spin-button{
			-webkit-appearance: none; 
			margin: 0;
		}
	}
}

.onoffswitch {
	// top:58px;
	// left:9px;
	position: relative; 
	width: 88px;
	-webkit-user-select:none; 
	-moz-user-select:none; 
	-ms-user-select: none;
	&-checkbox{
		display: none;
	}
	&-label{
		display: block; overflow: hidden; cursor: pointer;
		border: 1px solid $white; border-radius: 20px;
	}
	&-inner{
		display: block; 
		width: 200%; 
		margin-left: -100%;
		transition: margin 0.3s ease-in 0s;

		&:before, .onoffswitch-inner:after{
			display: block; 
			float: left; 
			width: 50%; 
			height: 36px; 
			padding: 0; 
			line-height: 30px;
			font-size: 14px; 
			color: white; 
			box-sizing: border-box;
		}
		&:before{
			content: "Open";
			padding-left: 10px;
			background-color: #FFFFFF; color:$abhaya-primary-color;
			text-align: left;
			padding:5px;
			padding-left:10px;
		}
		&:after{
			content: "Closed";
			background-color:transparent; color: $white;
			text-align: right;
			padding:3px !important;
			padding-right:10px !important;
			position: relative;
			top: 5px;
		}
	}
	&-switch{
		display: block; 
		width: 18px; 
		margin: 10px;
		background: #FFFFFF;
		position: absolute; 
		top: 0; bottom: 0;
		right: 56px;
		border: 2px solid #22BAD3; 
		border-radius: 20px;
		transition: all 0.3s ease-in 0s;
	}
	&-checkbox{
		&:checked {
			& + .onoffswitch-label .onoffswitch-inner {
				margin-left: 0;
			}
			& + .onoffswitch-label .onoffswitch-switch{
				right: 0px; 
			}

		}
	}
}