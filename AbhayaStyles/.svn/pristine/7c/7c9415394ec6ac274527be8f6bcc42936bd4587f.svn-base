.modal{
    &-content{
        background-color: $white;
        padding:20px !important;
        padding-left:0px;
    }
    &-header{
        padding:20px;
        margin-left: 20px;
        padding-right: 0px;
        padding-left:0px;
        margin-right: 20px;
        & button{
            &.close{
                &:focus{
                    outline:none;
                }
            }
        }
    }
    &-title{
        font-size:20px;
        font-weight: bold;
        color:$abhaya-primary-color;
        & span{
            font-size:12px;
            color:$navy-blue !important;
        }
    }
    &-body{
        padding:20px;
        margin-left: 20px;
        padding-right: 0px;
        padding-left:0px;
        margin-right: 20px;
        max-height: 450px;
        overflow-y: auto;
        overflow-x: hidden;
        &::-webkit{
            &-scrollbar{
                width:5px;
                &-thumb{
                    background-color:#888888;
                }
                &-track{
                    background-color:#f1f1f1;
                }
            }
        }
        & h4{
            color:$navyblue-light;
            font-size: 15px;
            font-weight: bold;
            word-break: break-all;
        }
        & h5{
            color:#8a8a8a;
            font-size: 14px;
            // font-weight: bold;
        }
        &.row-m-b{
            & .col-md-6{
                & h4{
                margin-bottom: 20px !important;
                }
            }
        }
    }
    &-footer{
        padding:5px;
    }
   
}