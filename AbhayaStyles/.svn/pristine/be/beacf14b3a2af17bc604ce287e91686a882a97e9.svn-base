.form{
	&-group{
		& .form-control{
			&:focus{
				box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
				-webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
				-moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
				transition: none;
				-moz-transition: none;
				-webkit-transition: none;
			}
		}
		& label{
			color:$grey-light;
		}
		& select{
			border:1px solid $grey-light;
			color:$grey;
		}
	}
}
.grid{
	&-table{
		border-collapse: collapse;
		width: 100%;
		margin: 0 0 1em;
		background-color:#fff;
		thead{
			tr{
			th{
			border-bottom:2px solid $abhaya-primary-color;
			padding-bottom:10px;
			color:$abhaya-primary-color;
			font-size: 14px;
			border-top:none !important;
			text-align: center;
			}
			}
		}
		tbody{
			tr{
				border-bottom: 1px solid #FCFCFC;
				td{
					text-align: center;
					padding: .9em 0;
					color:#5B5B5B;
					font-size: 14px;
					&:last-child{
						text-align: center;
						cursor: pointer;
						width:20px;
					}
				}
			}
		}
		& th,td{
			padding-left:6px !important;
			padding-right:6px !important;
		}
		& th:first-child, & th:last-child{
			padding-left:0px !important;
			padding-right:0px !important;
		}
		& td:first-child, & td:last-child{
			padding-left:0px !important;
			padding-right:0px !important;
		}
	}
}
.btn{
   		border:1px solid $white;
        color:$white;
        padding: 0.5rem .8rem;
        font-size:14px;
        background-color:$abhaya-primary-color;
        &:hover{
            background-color:$white;
            color:$abhaya-primary-color;
        }&.active{
            background-color:$white;
            color:$abhaya-primary-color;
        }
    &-left{
        border-top-left-radius: 50px !important;
        border-bottom-left-radius: 50px !important;
    }
    &-right{
        margin-left:-5px;
        border-top-right-radius: 50px !important;
        border-bottom-right-radius: 50px !important;
	}	
	&-round{
		border-radius:50px !important;
		border:1px solid $white;
		background-color: transparent;
        color:$white;
        padding: 0.5rem .8rem;
		font-size:14px;
		cursor: pointer;
		outline: none;
		&:hover{
            background-color:$white;
			color:$abhaya-primary-color;
		}
	}
	&-search{
		font-size:24px;
		border:none;
		background-color: transparent;
		padding: 0.5rem .8rem;
		cursor: pointer;
		color:$white;
	}
	&-cal{
		background-color: transparent;
		border: none;
		color: $white;
		font-size: 16px;
		outline: none !important;
		cursor: pointer;
		padding-top:3px;
		margin-left:-7px;
		position: absolute;
		left:250px;
		z-index:999;
	}
	&-menu{
		background-color: transparent;
		border: none;
		color: $white;
		font-size: 30px;
		outline: none !important;
		cursor: pointer;
		padding-top:7px;
		margin-left:-7px;
		position: absolute;
		left:304px;
		z-index:999;
		-webkit-transition: all 0.5s ease;                  
		-moz-transition: all 0.5s ease;                 
		-o-transition: all 0.5s ease;   
		-ms-transition: all 0.5s ease;          
		transition: all 0.5s ease;
		&.collapsed{
			left:100px!important;
		}
	}
	&-primary{
		padding:10px;
		background-color: $abhaya-primary-color;
		color:#ffffff;
		font-weight: 300;
		font-size:18px;
		border: none;
		border-radius: 6px;
		outline: none;
	}
	&-secondary{
		padding:10px;
		background-color: $grey-light;
		color:#ffffff;
		font-weight: 300;
		font-size:18px;
		border: none;
		border-radius: 6px;
		outline: none;
	}
}

.page{
	&-leftdiv{
		width:calc(100% - 60px);
		float:left;
	}
	&-rightdiv{
		width:60px;
		float:right;
	}
	&-filters{
		height:0px;
		padding:0px;
		-webkit-transition: all 0.3s ease;                  
		-moz-transition: all 0.3s ease;                 
		-o-transition: all 0.3s ease;   
		-ms-transition: all 0.3s ease;          
		transition: all 0.3s ease;
		&.show{
			height:50px!important;
		}
		& input[type=text]{
			background-color: transparent;
			border: 1px solid #99F1FF;
			color:$white;
			&::placeholder{
				color:#99F1FF;
			}
		}
		& .btn{
			&-close{
				color:$white;
				margin-top:-30px;
				margin-right:10px;
			}
		}
	}
}
.datepicker{
	& .dropdown{
		&-menu{
			width:235px!important;
			top:35px!important;
		}
	}
}