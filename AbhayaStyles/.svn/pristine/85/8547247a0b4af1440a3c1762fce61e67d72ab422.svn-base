.#{$global}{
	&-table{
		border-collapse: collapse;
		width: 100%;
		margin: 0 0 1em;
		background-color:#fff;
		thead{
			tr{
			th{
			border-bottom:2px solid $abhaya-primary-color;
			padding-bottom:10px;
			color:$abhaya-primary-color;
			font-size: 14px;
			border-top:none !important;
			}
			}
		}
		tbody{
			tr{
				border-bottom: 1px solid #FCFCFC;
				td{
					padding: .9em 0;
					color:#5B5B5B;
					font-size: 14px;
					&:last-child{
						text-align: center;
						cursor: pointer;
						width:20px;
					}
				}
			}
		}
	}
}
.btn{
    &-toggle{
        border:1px solid $white;
        color:$white;
        padding: 0.5rem .8rem;
        font-size:14px;
        background-color:$abhaya-primary-color;
        &:hover{
            background-color:$white;
            color:$abhaya-primary-color;
        }&.active{
            background-color:$white;
            color:$abhaya-primary-color;
        }
    }
    &-left{
        border-top-left-radius: 50px !important;
        border-bottom-left-radius: 50px !important;
    }
    &-right{
        margin-left:-5px;
        border-top-right-radius: 50px !important;
        border-bottom-right-radius: 50px !important;
	}	
	&-menu{
		background-color: transparent;
		border: none;
		color: $white;
		font-size: 30px;
		outline: none !important;
		cursor: pointer;
		padding-top:7px;
		margin-left:-7px;
		position: absolute;
		left:304px;
		z-index:9999;
		&.collapsed{
			left:100px!important;
		}
	}
	&-submit{
			margin-top:30px;
			width:150px;
			height:45px;	
			background-color: $abhaya-primary-color;
			color:#ffffff;
			font-weight: 300;
			font-size:18px;
			border: none;
			border-radius: 6px;
			outline: none;
			cursor: pointer;		
	}
}
