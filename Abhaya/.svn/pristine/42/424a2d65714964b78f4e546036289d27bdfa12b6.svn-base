<div class="modal-header">
  <h5 class="modal-title">Activate Device</h5>
  <button type="button" class="close" aria-label="Close" (click)="activeModal.close('Close click')">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <div class="row">
      <div class="col-md-6">
          <h5>IMEI Number</h5>
          <input type="text" class="form-control" placeholder="IMEI Number" readonly [(ngModel)]="deviceDetails.imeiNumber">
        </div>
    <div class="col-md-6">
      <h5>Header</h5>
      <input type="text" class="form-control" placeholder="Header" [(ngModel)]="deviceActivedata.header">
    </div>
  </div>
  <div class="row m-t-3">
    <div class="col-md-6">
      <h5>Random Code</h5>
      <input type="text" class="form-control" placeholder="Random Code" [(ngModel)]="deviceActivedata.randomCode">
    </div>
    <div class="col-md-6">
      <h5>Reply Gateway Number</h5>
      <input type="text" class="form-control" placeholder="Reply Gateway Number"
        [(ngModel)]="deviceActivedata.replyGatewayNo">
    </div>
  </div>
</div>
<div class="modal-footer">
  <button type="submit" class="btn-secondary">Cancel</button>
  <button type="submit" class="btn-primary" (click)="activateDevice(deviceActivedata)">Activate</button>
</div>