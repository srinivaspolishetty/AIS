<div class="row p-t-1 p-a-0 m-a-0">
  <div class="col-md-10">
    <h4>Location Management</h4>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Location Management</li>
      </ol>
    </nav>
  </div>
  <div class="col-md-2 text-right">
    <button type="button" class="btn-search" (click)="btnShowFilters()"><i class="icon-ic_searchfilter"></i></button>
  </div>

</div>
<div class="row p-a-0 m-a-0 page-filters" [ngClass]="{'show': showFilters == true}">
  <div class="col-md-12">
    <div class="row page-leftdiv">
        <div class="col-md-4  p-r-0"></div>
      <div class="col-md-4  p-r-0">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="IMEI No"
          [(ngModel)]="searchValue" (keyup)="searchData();">
          <button type="button" class="btn-close close" aria-label="Close">
            <span aria-hidden="true" (click)="clearSearch();" *ngIf="showSearchClear">&times;</span>
          </button>
        </div>
      </div>
      <div class="col-md-4 p-r-0">
        <div class="form-group">
          <div class="input-group-append datepicker">
            <input type="text" class="form-control" readOnly placeholder="yyyy-mm-dd" name="dp"
              [(ngModel)]="model" (dateSelect)="changeDate();" ngbDatepicker #d="ngbDatepicker">
            <button style="outline:none" class="date_btn_style calendar" (click)="d.toggle()" type="button"> <i class="fa fa-calendar"
                aria-hidden="true"></i></button>
          </div>
        </div>
      </div>
    </div>
    <div class="page-rightdiv text-right">
      <button class="active btn"><i class="icon-ic_search"></i> Search</button>
    </div>
  </div>
</div>

<div class="row p-a-0 m-a-0">
  <div class="col-md-12">
    <div class="box-rect-round">
      <table class="abhaya-table m-t-3">
        <thead>
          <tr>
            <th>ID</th>
            <th>IMEI No</th>
            <th>Vehicle No</th>
            <th>Vendor ID</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Network Date</th>
            <th>Network Time</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr *ngFor="let location of locationMonitoringdata | paginate: { id: 'locationmonitoringpage', itemsPerPage: page.size, currentPage: p, totalItems: page.totalElements }">
            <td>{{location.lmpPacketDataId}}</td>
            <td>{{location.imei}}</td>
            <td>{{location.vehicleRegNo}}</td>
            <td>{{location.vendorId}}</td>
            <td>{{location.latitude}}</td>
            <td>{{location.longitude}}</td>
            <td>{{location.networkDate}}</td>
            <td>{{location.networkTime}}</td>
            <td (click)="locationDetails(location)"><i class="fa fa-ellipsis-v" aria-hidden="true"></i></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <div style="margin:0px auto;">
          <pagination-controls id="locationmonitoringpage" class="pagination" (pageChange)="pageChanged($event)" maxSize="6"
            directionLinks="true" autoHide="true" responsive="true" previousLabel="Prev" nextLabel="Next">
          </pagination-controls>
        </div>
      </div>
    </div>
  </div>
</div>