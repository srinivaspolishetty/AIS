<div class="row p-t-1 page-header">
  <div class="col-md-10">
    <h4>Emergency Management</h4>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
          <li class="breadcrumb-item"><a [routerLink]="['/dashboard']">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Emergency Management</li>
      </ol>
    </nav>
  </div>
</div>

<div class="row">
  <div class="col-sm-6 col-md-11 p-t-3">
    <span class="text-white">Total Records : {{page.totalElements}}</span>
  </div>
  <div class="col-md-1 text-right">
     <button type="button" class="btn-search" (click)="btnShowFilters()"><i class="icon-ic_searchfilter"></i></button>
  </div>
</div>
<div class="row page-filters" [ngClass]="{'show': showFilters == true}">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-3"></div>
      <div class="col-md-3">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search By IMEI No" [(ngModel)]="searchValue"
            (keyup)="searchData();">
          <button type="button" class="btn-close close" aria-label="Close">
            <span aria-hidden="true" (click)="clearSearch();" *ngIf="showSearchClear">&times;</span>
          </button>
        </div>
      </div>
      <div class="col-md-3">
        <div class="form-group">
          <div class="input-group-append datepicker">
            <input type="text" class="form-control" readOnly placeholder="yyyy-mm-dd" name="dp"
              [(ngModel)]="model" (dateSelect)="changeDate();" ngbDatepicker #d="ngbDatepicker">
            <button style="outline:none" class="btn-cal calendar" (click)="d.toggle()" type="button"> <i class="fa fa-calendar"
                aria-hidden="true"></i></button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="box-rect-round o-x-auto">
      <table class="grid-table m-t-3">
        <thead>
          <tr>
            <th>ID</th>
            <th>IMEI No</th>
            <th>Vehicle No</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Packet Type</th>
            <th>Network Date</th>
            <th>Network Time</th>
            <th>Reply No</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr *ngFor="let details of emergencyMonitoringdata | paginate: { id: 'emergencymonitoringpage', itemsPerPage: page.size, currentPage: p, totalItems: page.totalElements }">
            <td>{{details.ebpPacketDataId}}</td>
            <td>{{details.imeiNumber}}</td>
            <td>{{details.vehicleRegNo}}</td>
            <td>{{details.latitude}}</td>
            <td>{{details.longitude}}</td>
            <td>{{details.packetType}}</td>
            <td>{{details.networkDate}}</td>
            <td>{{details.networkTime}}</td>
            <td>{{details.replyNumber}}</td>
            <td (click)="emergencyDetails(details)">
                <div class='actions-menu'>
                    <button>
                      <i class="icon-ic_more" aria-hidden="true"></i>
                    </button></div></td>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <div style="margin:0px auto;">
          <pagination-controls id="emergencymonitoringpage" class="pagination" (pageChange)="pageChanged($event)"
            maxSize="6" directionLinks="true" autoHide="true" responsive="true" previousLabel="Prev" nextLabel="Next">
          </pagination-controls>
        </div>
      </div>
    </div>
  </div>
</div>